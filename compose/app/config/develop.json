{
	"log4js": {
		"level": "ALL",
		"configure": {
			"appenders": [
				{
					"category": "system"
					, "type": "file"
					,"filename": "/var/log/app/system.log"
				},
				{
					"category": "access"
					, "type": "file"
					,"filename": "/var/log/app/access.log"
				},
				{
					"category": "error"
					,"type": "file"
					,"filename": "/var/log/app/error.log"
				},
				{
					"category": "console"
					,"type": "file"
					,"filename": "/var/log/app/console.log"
				}
			],
			"replaceConsole": true
		}
	}
}
